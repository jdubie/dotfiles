# based on https://github.com/dcramer/dotfiles/blob/master/git/gitconfig

[github]
  user = jdubie

[user]
  name = Jack Dubie
  email = jack.dubie@gmail.com
  signingkey = FFB113BC
[commit]
  gpgsign = true

[color]
  ui = auto

[push]
  default = current

[pull]
  default = current

[core]
  pager = less -R
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
	tool = vimdiff
