# based on https://github.com/dcramer/dotfiles/blob/master/git/gitconfig

[github]
  user = jdubie

[user]
  name = Jack Dubie
  email = jack.dubie@gmail.com

[color]
  ui = auto

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "status"]
  added = green bold
  changed = yellow
  untracked = blue bold

[push]
  default = current

[pull]
  default = current

[core]
  pager = less -R
